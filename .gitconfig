[user]
        email = manzoku.ryo@gmail.com
        name = Ryo Manzoku

[core]
        editor = emacs

[pager]
	log = ~/.share/doc/git/contrib/diff-highlight/diff-highlight | less
	show = ~/.share/doc/git/contrib/diff-highlight/diff-highlight | less
    	diff = ~/.share/doc/git/contrib/diff-highlight/diff-highlight | less

[rebase]
	autosquash = true

[alias]
	unstage = "reset HEAD"
	refs = !git checkout $(git branch | peco | awk '{ print $NF }')

[ghq]
	root = ~/src

[url "git@github.com:"]
insteadOf = https://github.com/
