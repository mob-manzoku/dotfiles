export HISTFILE="${HOME}/.zsh.d/.zsh_history"
export HISTSIZE=100000
export SAVEHIST=${HISTSIZE}

# プロンプト
# 色付きにする。
autoload -Uz colors
colors

# Ctrl-L でスクリーンきれいにしてrehashもする
clear-screen-rehash() {
        zle clear-screen
        rehash
        zle reset-prompt
}
zle -N clear-screen-rehash
bindkey '^L' clear-screen-rehash
